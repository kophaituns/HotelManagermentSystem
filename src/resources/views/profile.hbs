<!-- Profile Section -->
    <section class="dashboard__section">
      <div class="profile">
        <!-- Back Button (chỉ hiển thị cho admin) -->
        {{#if currentcurrentUser.isAdmin}}
          <div class="profile__back mb-4">
            <a href="/admin/employee" class="btn btn-outline-secondary btn-sm">
              <i class="ti-arrow-left me-1"></i>Quay lại danh sách
            </a>
          </div>
        {{/if}}

        <!-- Error Message -->
        {{#if error}}
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{error}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        {{else}}
          <!-- Profile Card -->
          <div class="card shadow profile__card p-4">
            <div class="row align-items-center">
              <!-- Avatar -->
              <div class="col-md-4 text-center mb-4 mb-md-0">
                <img 
                  src="{{currentUser.avatar}}" 
                  alt="Avatar" 
                  class="profile__avatar mb-3 rounded-circle"
                  style="width: 150px; height: 150px; object-fit: cover;"
                >
                <h5 class="profile__name fw-bold">{{currentUser.name}}</h5>
                <span class="badge {{#if currentUser.isAdmin}}bg-danger{{else}}bg-secondary{{/if}} rounded-pill">
                  {{currentUser.role}}
                </span>
              </div>

              <!-- currentUser Info -->
              <div class="col-md-8">
                <h4 class="mb-3 fw-bold"><i class="ti-info-alt me-2"></i>Thông tin cá nhân</h4>
                <ul class="list-group list-group-flush">
                  {{!-- <li class="list-group-item"><strong>Tài khoản:</strong> {{currentUser.currentUsername}}</li> --}}
                  <li class="list-group-item"><strong>Email:</strong> {{currentUser.email}}</li>
                  <li class="list-group-item"><strong>Ngày sinh:</strong> {{formatDate currentUser.dob}}</li>
                  <li class="list-group-item"><strong>Số điện thoại:</strong> {{currentUser.phone}}</li>
                  <li class="list-group-item"><strong>Vai trò:</strong> {{currentUser.role}}</li>
                  <li class="list-group-item"><strong>Ngày tạo:</strong> {{formatDate currentUser.createdAt}}</li>
                  <li class="list-group-item"><strong>Cập nhật lần cuối:</strong> {{formatDate currentUser.updatedAt}}</li>
                </ul>
               
              </div>
            </div>
          </div>
        {{/if}}
      </div>
    </section>
  </main>
</div>