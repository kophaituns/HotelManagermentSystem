<header class="hotel-header navbar navbar-expand-lg bg-white shadow-lg">
  <div class="container-fluid px-4 py-3">
    <a class="navbar-brand fw-bold text-primary-emphasis font-size-18" href="/">
      <i class="ti-home me-1 "></i> LuxStay
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
      <ul class="navbar-nav align-items-center">
        <li class="nav-item mx-2">
          <a class="btn btn-primary btn-book-now px-4 py-2 rounded-3 font-size-13" href="/search">
            <i class="ti-agenda me-1"></i> Đặt phòng
          </a>
        </li>

        {{#if currentUser}}
          <li class="nav-item dropdown mx-2">
            <a class="nav-link dropdown-toggle d-flex align-items-center text-primary-emphasisfont-size-13" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="ti-user me-1 mr-2"></i> {{currentUser.name}}
            </a>
            <ul class="dropdown-menu dropdown-menu-end shadow-lg rounded-3" aria-labelledby="userDropdown">
              <li><a class="dropdown-item" href="/profile">Trang cá nhân</a></li>

              {{#if currentUser.isAdmin}}
                <li><a class="dropdown-item" href="/admin">Trang quản trị</a></li>
                <li><a class="dropdown-item" href="/admin/employee">Quản lý người dùng</a></li>
                <li><a class="dropdown-item" href="/admin/room">Quản lý phòng</a></li>
                <li><a class="dropdown-item" href="/admin/revenue-report">Quản lý doanh thu</a></li>
              {{else}}
                <li><a class="dropdown-item" href="/staff">Quản lý đặt phòng</a></li>
                <li><a class="dropdown-item" href="/staff/history">Lịch sử xử lý</a></li>
                <li><a class="dropdown-item" href="/staff/bookAtCounter">Đặt phòng tại quầy</a></li>
              {{/if}}

              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item text-danger" href="/auth/logout">Đăng xuất</a></li>
            </ul>
          </li>
        {{else}}
          <li class="nav-item mx-2">
            <a class="btn btn-outline-primary btn-login px-4 py-2 rounded-3" href="/login">
              <i class="ti-login me-1"></i> Đăng nhập
            </a>
          </li>
        {{/if}}
      </ul>
    </div>
  </div>
</header>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>