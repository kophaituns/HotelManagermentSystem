<div class="dashboard">
  <aside class="dashboard__sidebar">
    <div class="dashboard__brand">HOTEL</div>
    <nav class="dashboard__nav">
      <a href="/admin/employee" class="dashboard__nav-link nav-link">
        <i class="ti-user"></i>
        <span>Quản lý người dùng</span>
      </a>
      <a href="/admin/room" class="dashboard__nav-link nav-link">
        <i class="ti-home"></i>
        <span>Quản lý phòng</span>
      </a>
      <a href="/admin/trash" class="dashboard__nav-link nav-link">
        <i class="ti-trash"></i>
        <span>Thùng rác</span>
      </a>
      <a href="/logout" class="dashboard__nav-link nav-link dashboard__nav-link--logout">
        <i class="ti-power-off"></i>
        <span>Đăng xuất</span>
      </a>
    </nav>
  </aside>

  <main class="dashboard__content">
    <header class="dashboard__header">
      <h2 class="dashboard__title"><i class="ti-info-alt"></i> Chi tiết người dùng</h2>
      <div class="dashboard__user-info">
        <span><i class="ti-user"></i> Tên: {{user.name}}</span>
        <span><i class="ti-id-badge"></i> Quyền: {{user.role}}</span>
      </div>
    </header>

    <section class="dashboard__section">
      <div class="user-detail">
        <div class="user-detail__back mb-4">
          <a href="/admin/employee" class="btn btn-outline-secondary btn-sm">
            <i class="ti-arrow-left"></i> Quay lại danh sách
          </a>
        </div>

        <div class="card shadow user-detail__card p-4">
          <div class="row">
            <!-- Ảnh đại diện -->
            <div class="col-md-4 text-center mb-4 mb-md-0">
              <img src="{{user.avatar}}" alt="Avatar" class="user-detail__avatar mb-3">
              <h5 class="user-detail__name">{{user.name}}</h5>
              <span class="badge {{#if user.isAdmin}}bg-danger{{else}}bg-secondary{{/if}}">
                {{#if user.isAdmin}}Quản trị viên{{else}}Nhân viên{{/if}}
              </span>
            </div>

            <!-- Thông tin chi tiết -->
            <div class="col-md-8">
              <h4 class="mb-3"><i class="ti-info-alt"></i> Thông tin chi tiết</h4>
              <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Tài khoản:</strong> {{user.username}}</li>
                <li class="list-group-item"><strong>Email:</strong> {{user.email}}</li>
                <li class="list-group-item"><strong>Ngày sinh:</strong> {{user.dob}}</li>
                <li class="list-group-item"><strong>Số điện thoại:</strong> {{user.phone}}</li>
                <li class="list-group-item"><strong>Vai trò:</strong> {{#if user.isAdmin}}Quản trị viên{{else}}Nhân viên{{/if}}</li>
                <li class="list-group-item"><strong>Ngày tạo:</strong> {{user.createdAt}}</li>
                <li class="list-group-item"><strong>Cập nhật lần cuối:</strong> {{user.updatedAt}}</li>
              </ul>

              <div class="mt-4">
                <a href="/admin/employee/edit/{{user._id}}" class="btn btn-success btn-sm btn__link-edit">
                  <i class="ti-pencil"></i> Sửa
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</div>