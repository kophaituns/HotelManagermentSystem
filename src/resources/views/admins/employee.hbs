<div class="user-manager">
  <div class="user-manager__header">
    <a href="/admin" class="btn btn--back">
      <i class="ti-arrow-left"></i> Quay lại
    </a>

    <h1 class="user-manager__title">
      <i class="ti-user"></i> Quản lý người dùng
    </h1>

    <div class="user-manager__actions">
      <div class="search-container">
        <input type="text" class="search-input" placeholder="Tìm kiếm người dùng..." id="searchUser">
        <button class="search-btn">
          <i class="ti-search search-icon"></i>
        </button>
      </div>
      <a href="/admin/employee/create" class="btn btn--primary">
        <i class="ti-plus"></i> Thêm người dùng
      </a>
      <a href="/admin/trash" class="btn btn--trash">
        <i class="ti-trash"></i> Thùng rác
      </a>
    </div>
  </div>

  <table class="user-manager__table">
    <thead>
      <tr>
        <th>STT</th>
        <th>Ảnh</th>
        <th>Họ tên</th>
        <th>Email</th>
        <th>Ngày sinh</th>
        <th>Số điện thoại</th>
        <th>Vai trò</th>
        <th>Hành động</th>
      </tr>
    </thead>
    <tbody>
      {{#if users}}
      {{#each users}}
      <tr>
        <td>{{@index}}</td>
        <td><img src="{{this.avatar}}" alt="Ảnh đại diện" class="user-avatar"></td>
        <td>{{this.name}}</td>
        <td>{{this.email}}</td>
        <td>{{this.dob}}</td>
        <td>{{this.phone}}</td>
        <td>{{this.role}}</td>
        <td>
          <a href="/admin/employee/show/{{this._id}}" class="btn__link-show">
            <button class="btn btn--view"><i class="ti-eye"></i> Xem</button>
          </a>

          <a href="/admin/employee/edit/{{this._id}}" class="btn__link-edit">
            <button class="btn btn--edit"><i class="ti-pencil"></i> Sửa</button>

          </a>
          <a href="#" class="btn__link-delete" data-toggle="modal" data-id="{{this._id}}" data-target="#delete-user-modal">
            <button class="btn btn--delete"><i class="ti-trash"></i> Xóa</button>

          </a>
        </td>
      </tr>
      {{/each}}
      {{else}}
      <tr>
        <td colspan="8" class="no-data text-center">
          Không có người dùng nào! <br>
          <a href="/admin/employee/create" class="btn btn--primary">Thêm người dùng</a>
        </td>
      </tr>
      {{/if}}
    </tbody>
  </table>
</div>


{{!-- Modal deleteuser --}}

<div id="delete-user-modal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xóa khóa học?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Bạn chắc chắn muốn xóa khóa học này?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
        <button id="btn-delete-user" type="button" class="btn btn-danger">Xóa bỏ</button>
      </div>
    </div>
  </div>
</div>



{{!-- form delete user/ hidden form --}}
<form name="delete-user-form" method="POST"></form>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var userId;
        var deleteForm = document.forms['delete-user-form'];
        var btnDeleteUser = document.getElementById('btn-delete-user');

        // When dialog confirm clicked
        $('#delete-user-modal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            userId = button.data('id');
        });
        
        // When delete course btn clicked
        btnDeleteUser.onclick = function () {
          console.log('Deleting userId:', userId);
            deleteForm.action = '/admin/employee/delete/' + userId + '?_method=DELETE';
            deleteForm.submit();
        }
    });
</script>