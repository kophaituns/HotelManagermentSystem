<script>
  // Hàm để thiết lập ngày tối thiểu cho các trường ngày
  function setMinDate() {
    const today = new Date();
    const day = ("0" + today.getDate()).slice(-2);
    const month = ("0" + (today.getMonth() + 1)).slice(-2); // Tháng bắt đầu từ 0
    const year = today.getFullYear();
    const minDate = year + "-" + month + "-" + day;

    // Cập nhật giá trị tối thiểu cho ngày nhận phòng và ngày trả phòng
    document.getElementById("checkin").setAttribute("min", minDate);
    document.getElementById("checkout").setAttribute("min", minDate);
  }

  // Gọi hàm khi trang được tải
  window.onload = setMinDate;
</script>